{
  "manifest_version":2,
  "name":"DanmuBlocker",
  "version":"1.2.6",

  "browser_action":{
    "default_icon":{
      "19":"./img/icon-19.png"
    },
    "default_popup":"popup.html",
    "default_title":"DanmuBlocker"
  },

  "permissions":["tabs","storage","http://www.douyu.com/*","http://www.douyutv.com/*","contextMenus"],

  "background":{
    "scripts":["ext/common.js","background.js","messageType.js"]
  },

  "content_scripts":[{
    "matches":["http://www.douyu.com/*","http://www.douyutv.com/*"],
    "js":["findDouyuChat.js"]
  }]
}